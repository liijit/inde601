  "dependencies": {
    "@typegoose/typegoose": "^7.4.5",
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.18",
    "package-json": "^6.5.0",
    "path": "^0.12.7",
    "socket.io": "^3.0.3",
    "validator": "^13.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/mongoose": "^5.10.2",
    "@types/node": "^14.14.10",
    "@types/socket.io": "^2.1.11",
    "@types/validator": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "lint": "eslint \"src\" --ext --fix",
    "prettier-css": "cd frontend/css && prettier --find-config-path -w",
    "prettier-html": "cd frontend && prettier --find-config-path -w",
    "prettier-err": "prettier --find-config-path -w ./frontend/css/",
    "dev": "tsc && nodemon -r dotenv/config src/app.ts && nodemon --watch 'src/**'",
    "html": "browser-sync start --server --files '*.html, css/*.css'",
    "dev-typescript-w": "tsnd --respawn src/app.ts --watch src/*.ts",
    "prod": "tsc && node ts-pile/app.js"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "lint-staged": {
    "*.css": [
      "npm run prettier-css", "git add"
    ],
    "*.html": [
      "npm run prettier-html", "git add"
    ],
    "*.ts": [
      "npm run lint", "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}